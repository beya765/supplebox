<% if current_user.like?(product) %>
  <%= form_for(current_user.likes.find_by(product_id: product.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :product_id, product.id %>
    <%= button_tag(class: "btn btn-lg btn-danger") do %>
      <%= content_tag :span, "お気に入り登録解除", class: "glyphicon glyphicon-heart-empty" %>
    <% end %>
  <% end %>
<% else %>
  <%= form_for(current_user.likes.build) do |f| %>
    <%= hidden_field_tag :product_id, product.id %>
    <%= button_tag(class: "btn btn-lg btn-info") do %>
      <%= content_tag :span, "お気に入り登録解除", class: "glyphicon glyphicon-heart" %>
    <% end %>
  <% end %>
<% end %>