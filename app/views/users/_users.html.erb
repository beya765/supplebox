<% if users.any? %>
  <!--ユーザー一覧-->
  <ul class="media-list">
    <% users.each do |user| %>
      <li class="media">
        <div class="media-left">
          <%= image_tag user.picture.url ,width: '84px' %>
        </div>
        <div class="media-body">
          <div>
            <%= link_to user.name, user %> さん（口コミ<%= user.posts.count %>件）
          </div>
          <div>
            <p><%= user.gender %> <%= user.height %> <%= user.weight %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <!--ページネーション-->
  <%= paginate users %>
  </p><%= page_entries_info users %></p>
<% end %>