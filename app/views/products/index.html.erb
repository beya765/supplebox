<h1>商品一覧情報</h1>

<div class="search">
  <div class="row">
    <div class="text-center">
      <%= search_form_for @q, class:'form-inline' do |f| %>
        <div class="form-group">
          <%= f.text_field :title_cont, class: 'form-control input-lg', placeholder: "キーワードを入力", size: 40 %>
        </div>
        <%= f.submit '商品を検索', class: "btn btn-success btn-lg" %>
      <% end %>
      </div>
  </div>
</div>

<!--商品一覧-->
<%= render 'products', producs: @products %>
<!--ページネーション-->
<%= paginate @products %>
</p><%= page_entries_info @products %></p>
